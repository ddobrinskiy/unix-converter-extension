{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": false,
    "inlineSources": false,
    "declaration": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
} 