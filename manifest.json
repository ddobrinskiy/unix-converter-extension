{
  "manifest_version": 3,
  "name": "Unix Timestamp Converter",
  "version": "1.1.0",
  "description": "Convert between Unix timestamps and human-readable dates. Perfect for developers and sysadmins.",
  "action": {
    "default_popup": "./popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["clipboardWrite"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Shift+Ctrl+U"
      },
      "description": "Activate the extension"
    }
  },
  "author": "David Dobrinskiy",
  "homepage_url": "https://github.com/ddobrinskiy/unix-converter-extension"
} 